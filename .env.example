# ───── API / model ─────────────────────────────────────────────
GROQ_API_KEY=YOUR_GROQ_KEY_HERE

# ───── mail transport ─────────────────────────────────────────
SMTP_HOST=smtp.example.com
SMTP_PORT=587           # 465 if you prefer implicit SSL
SMTP_USER=your@email.com
SMTP_PASS=********      # paste the real password here
SMTP_SSL=0              # 1 = use smtplib.SMTP_SSL
SMTP_NAME=The Cyberlurch’s NewsAgent   # display name in “From:”
EMAIL_FROM=********
EMAIL_TO=********

# ───── recipients (one per language bucket) ───────────────────
RECIP_EN=********
RECIP_DE=********
RECIP_SV=********
RECIP_PL=********

# ───── feature toggle ─────────────────────────────────────────
SEND_EMAIL=1            # set to 0 (or remove) to suppress mailing

# ───── Grok Pause for the summarizer to be more gentle (less 429 errors) ─────────
GROQ_PAUSE_SEC=10